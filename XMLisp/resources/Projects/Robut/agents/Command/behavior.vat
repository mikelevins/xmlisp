<?xml version="1.0"?>
<behavior>
  <method disclosed="true" comments="Put text here to explain what this method does!">
    <on-mouse-click/>
    <rule>
      <if>
        <see shape="COMMAND COMMAND">
          <direction/>
        </see>
      </if>
      <then>
        <change shape="turn_left COMMAND">
          <direction/>
        </change>
      </then>
    </rule>
    <rule>
      <if>
        <see shape="TURN_LEFT COMMAND">
          <direction/>
        </see>
      </if>
      <then>
        <change shape="turn_right COMMAND">
          <direction/>
        </change>
      </then>
    </rule>
    <rule>
      <if>
        <see shape="TURN_RIGHT COMMAND">
          <direction/>
        </see>
      </if>
      <then>
        <change shape="red COMMAND">
          <direction/>
        </change>
      </then>
    </rule>
    <rule>
      <if>
        <see shape="RED COMMAND">
          <direction/>
        </see>
      </if>
      <then>
        <change shape="blue COMMAND">
          <direction/>
        </change>
      </then>
    </rule>
    <rule>
      <if>
        <see shape="BLUE COMMAND">
          <direction/>
        </see>
      </if>
      <then>
        <change shape="black COMMAND">
          <direction/>
        </change>
      </then>
    </rule>
    <rule>
      <if>
        <see shape="BLACK COMMAND">
          <direction/>
        </see>
      </if>
      <then>
        <erase>
          <direction/>
        </erase>
      </then>
    </rule>
  </method>
  <method comments="Put text here to explain what this method does!">
    <on selector="EXECUTE"/>
    <rule>
      <if>
        <see shape="RED COMMAND">
          <direction/>
        </see>
      </if>
      <then>
        <broadcast class-name="Robot" selector="red"/>
        <message selector="execute">
          <direction dcol="1"/>
        </message>
      </then>
    </rule>
    <rule>
      <if>
        <see shape="BLUE COMMAND">
          <direction/>
        </see>
      </if>
      <then>
        <broadcast class-name="Robot" selector="blue"/>
        <message selector="execute">
          <direction dcol="1"/>
        </message>
      </then>
    </rule>
    <rule>
      <if>
        <see shape="BLACK COMMAND">
          <direction/>
        </see>
      </if>
      <then>
        <broadcast class-name="Robot" selector="black"/>
        <message selector="execute">
          <direction dcol="1"/>
        </message>
      </then>
    </rule>
    <rule>
      <if>
        <see shape="COMMAND COMMAND">
          <direction/>
        </see>
      </if>
      <then>
        <broadcast class-name="Robot" selector="move_forward"/>
        <message selector="execute">
          <direction dcol="1"/>
        </message>
      </then>
    </rule>
    <rule>
      <if>
        <see shape="TURN_LEFT COMMAND">
          <direction/>
        </see>
      </if>
      <then>
        <message selector="execute">
          <direction dcol="1"/>
        </message>
        <broadcast class-name="Robot" selector="turn_left"/>
      </then>
    </rule>
    <rule>
      <if>
        <see shape="TURN_RIGHT COMMAND">
          <direction/>
        </see>
      </if>
      <then>
        <message selector="execute">
          <direction dcol="1"/>
        </message>
        <broadcast class-name="Robot" selector="turn_right"/>
      </then>
    </rule>
  </method>
</behavior>