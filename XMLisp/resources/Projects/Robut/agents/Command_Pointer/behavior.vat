<?xml version="1.0"?>
<behavior>
  <method comments="Put text here to explain what this method does!">
    <while-running/>
    <rule>
      <if>
        <key label="R"/>
      </if>
      <then>
        <broadcast class-name="Robot" selector="reset"/>
        <broadcast class-name="Score" selector="reset"/>
        <broadcast class-name="Cp_Start" selector="new"/>
        <erase>
          <direction/>
        </erase>
      </then>
    </rule>
    <rule>
      <if>
        <key label="space"/>
        <see shape="ONE BOARDER">
          <direction dcol="1"/>
        </see>
      </if>
      <then>
        <move>
          <direction drow="-1"/>
        </move>
        <set attribute="@SCORE" value="0"/>
      </then>
    </rule>
    <rule>
      <if>
        <see-a class-name="COMMAND">
          <direction dcol="1"/>
        </see-a>
      </if>
      <then>
        <message selector="execute">
          <direction dcol="1"/>
        </message>
        <broadcast class-name="Score" selector="score"/>
        <wait duration="1"/>
        <set attribute="@SCORE" value="@score+1"/>
        <move>
          <direction drow="-1"/>
        </move>
      </then>
    </rule>
  </method>
</behavior>