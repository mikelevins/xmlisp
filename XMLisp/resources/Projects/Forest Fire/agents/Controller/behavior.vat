<?xml version="1.0"?>
<behavior>
  <method disclosed="true" comments="synchronize trees: tell all the trees to determine whether they should be burning in one step/at the same time (perceive message); then tell all the trees to act what they decided to do in the perceive message at the same time">
    <while-running/>
    <rule>
      <if/>
      <then>
        <broadcast class-name="Tree" selector="PERCEIVE"/>
        <broadcast class-name="Tree" selector="ACT"/>
      </then>
    </rule>
  </method>
  <method disclosed="true" comments="create new forests">
    <on-mouse-click/>
    <rule>
      <if/>
      <then>
        <broadcast class-name="Tree" selector="delete"/>
        <set attribute="@TREES" value="0"/>
        <set attribute="@BURNT_TREES" value="0"/>
        <broadcast class-name="Ground" selector="create_forest"/>
      </then>
    </rule>
  </method>
</behavior>