<?xml version="1.0"?>
<behavior comments="I am user controlled">
  <method disclosed="true" comments="create a sine function based on increasing time to serve as the source for a wave; this wave is faster than the other source">
    <while-running/>
    <rule>
      <if/>
      <then>
        <set attribute="TIME" value="time + 1"/>
        <set attribute="HEIGHT" value="10 * sin (0.05 * time) "/>
      </then>
    </rule>
  </method>
</behavior>