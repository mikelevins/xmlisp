<?xml version="1.0"?><behavior >  <method disclosed="true" comments="hill climb toward food">    <on selector="ADVANCE"/>    <rule>      <if>        <test expression1="f[up]" operator="&gt;" expression2="f[right]"/>        <test expression1="f[up]" operator="&gt;" expression2="f[left]"/>        <test expression1="f[up]" operator="&gt;" expression2="f[down]"/>      </if>      <then>        <move duration="slider()">          <direction drow="1"/>        </move>        <rotate-to disclosed="true" duration="0.5 * slider()"/>      </then>    </rule>    <rule>      <if>        <test expression1="f[right]" operator="&gt;" expression2="f[up]"/>        <test expression1="f[right]" operator="&gt;" expression2="f[left]"/>        <test expression1="f[right]" operator="&gt;" expression2="f[down]"/>      </if>      <then>        <rotate-to disclosed="true" roll-angle="270" duration="0.5 * slider()"/>        <move duration="slider()">          <direction dcol="1"/>        </move>      </then>    </rule>    <rule>      <if>        <test expression1="f[left]" operator="&gt;" expression2="f[right]"/>        <test expression1="f[left]" operator="&gt;" expression2="f[up]"/>        <test expression1="f[left]" operator="&gt;" expression2="f[down]"/>      </if>      <then>        <rotate-to disclosed="true" roll-angle="90" duration="0.5 * slider()"/>        <move duration="slider()">          <direction dcol="-1"/>        </move>      </then>    </rule>    <rule>      <if>        <test expression1="f[down]" operator="&gt;" expression2="f[right]"/>        <test expression1="f[down]" operator="&gt;" expression2="f[left]"/>        <test expression1="f[down]" operator="&gt;" expression2="f[up]"/>      </if>      <then>        <rotate-to disclosed="true" roll-angle="180" duration="0.5 * slider()"/>        <move duration="slider()">          <direction drow="-1"/>        </move>      </then>    </rule>  </method>  <method disclosed="true">    <when-creating-new-agent/>    <rule>      <if/>      <then>        <rotate-first-person-camera droll="-90"/>      </then>    </rule>  </method>  <method disclosed="true">    <while-running/>    <rule>      <if>        <once-every seconds="1.0"/>      </if>      <then>        <message selector="ADVANCE">          <direction/>        </message>      </then>    </rule>  </method></behavior>