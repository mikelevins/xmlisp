<?xml version="1.0"?>
<behavior>
  <method disclosed="true">
    <while-running/>
    <rule>
      <if>
        <see-a class-name="BACKGROUND">
          <direction drow="-1"/>
        </see-a>
      </if>
      <then>
        <move duration="0.05">
          <direction drow="-1"/>
        </move>
      </then>
    </rule>
    <rule>
      <if>
        <see-a class-name="BORDER">
          <direction drow="-1"/>
        </see-a>
        <see-a class-name="BACKGROUND">
          <direction dcol="-1"/>
        </see-a>
        <once-every/>
      </if>
      <then>
        <message selector="UP">
          <direction drow="1"/>
        </message>
      </then>
    </rule>
  </method>
  <method>
    <on selector="BLINK"/>
    <rule>
      <if/>
      <then>
        <set-color-to/>
        <wait duration=".5"/>
        <set-color-to/>
        <wait duration=".5"/>
      </then>
    </rule>
  </method>
  <method comments="no comments">
    <on selector="MOVE-TO-THE-LEFT"/>
    <rule>
      <if>
        <see-a class-name="CUBE">
          <direction drow="1"/>
        </see-a>
      </if>
      <then>
        <message selector="MOVE-TO-THE-LEFT">
          <direction drow="1"/>
        </message>
        <move>
          <direction dcol="-1"/>
        </move>
      </then>
    </rule>
    <rule>
      <if/>
      <then>
        <move>
          <direction dcol="-1"/>
        </move>
      </then>
    </rule>
  </method>
  <method comments="no comments">
    <on selector="WHICH-TO-DELETE"/>
    <rule>
      <if>
        <test expression1="color" expression2="1"/>
      </if>
      <then>
        <message selector="SEND-RED">
          <direction/>
        </message>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="color" expression2="2"/>
      </if>
      <then>
        <message selector="SEND-BLUE">
          <direction/>
        </message>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="color" expression2="3"/>
