  <method comments="no comment">
    <on selector="RED"/>
    <rule>
      <if>
        <test expression1="color" expression2="1"/>
        <test expression1="delete" expression2="0"/>
      </if>
      <then>
        <set attribute="DELETE" value="1"/>
        <message selector="SEND-RED">
          <direction/>
        </message>
        <message selector="DELETE">
          <direction/>
        </message>
      </then>
    </rule>
  </method>
