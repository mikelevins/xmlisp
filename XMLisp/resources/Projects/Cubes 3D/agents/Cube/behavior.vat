        </message>
        <message selector="RED">
          <direction drow="1"/>
        </message>
        <message selector="RED">
          <direction dcol="-1"/>
        </message>
        <message selector="RED">
          <direction drow="-1"/>
        </message>
        <message selector="RED" dlayer="-2">
          <direction/>
