<?xml version="1.0"?>
<behavior comments="I am user controlled">
  <method disclosed="true">
    <while-running/>
    <rule>
      <if>
        <see shape="MOLEMOUND Grass">
          <direction/>
        </see>
        <once-every seconds="2.5"/>
        <percent-chance expression="10"/>
      </if>
      <then>
        <new shape="MOLE Mole">
          <direction/>
        </new>
      </then>
    </rule>
    <rule>
      <if>
        <current-world world="Moundo&#39;Moles"/>
        <see shape="MOLEMOUND Grass">
          <direction/>
        </see>
        <once-every seconds="5"/>
        <percent-chance expression="1"/>
      </if>
      <then>
        <new shape="MADMOLE Mole">
          <direction/>
        </new>
      </then>
    </rule>
    <rule>
      <if>
        <see shape="TIMER Grass">
          <direction/>
        </see>
        <once-every seconds="1"/>
      </if>
      <then>
        <set attribute="@TIMER" value="@Timer-1"/>
        <message selector="Check_Time">
          <direction/>
        </message>
      </then>
    </rule>
  </method>
  <method disclosed="true">
    <on selector="Check_Time"/>
    <rule>
      <if>
        <test expression1="@Timer" operator="&lt;=" expression2="-1"/>
        <current-world world="Moundo&#39;Moles"/>
      </if>
      <then>
        <finish-animations/>
        <stop-simulation/>
        <set attribute="@TIMER" value="30"/>
        <message selector="Checkscore">
          <direction/>
        </message>
        <show-message disclosed="true" text="You Have Whacked ~@Score Moles!                                                   The High Score Is ~@High_Score Moles!" subtext="  "/>
        <set attribute="@SCORE" value="0"/>
        <reload-world disclosed="true" reload-properties="false"/>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="@Timer" operator="&lt;=" expression2="0"/>
        <current-world world="Moleland"/>
      </if>
      <then>
        <finish-animations/>
        <stop-simulation/>
        <set attribute="@TIMER" value="30"/>
        <message selector="Checkscore">
          <direction/>
        </message>
        <show-message disclosed="true" text="You Have Whacked ~@Score Moles!                                                   The High Score Is ~@Highscore_Moleland Moles!" subtext="  "/>
        <set attribute="@SCORE" value="0"/>
        <reload-world disclosed="true" reload-properties="false"/>
      </then>
    </rule>
  </method>
  <method disclosed="true">
    <on selector="Checkscore"/>
    <rule>
      <if>
        <test expression1="@High_Score" operator="&lt;=" expression2="@Score"/>
        <current-world world="Moundo&#39;Moles"/>
      </if>
      <then>
        <set attribute="@HIGH_SCORE" value="@Score"/>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="@Highscore_Moleland" operator="&lt;=" expression2="@Score"/>
        <current-world world="Moleland"/>
      </if>
      <then>
        <set attribute="@HIGHSCORE_MOLELAND" value="@Score"/>
      </then>
    </rule>
  </method>
</behavior>