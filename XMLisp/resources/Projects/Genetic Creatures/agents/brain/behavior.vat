<?xml version="1.0"?>
<behavior comments="I am user controlled">
  <method disclosed="true">
    <while-running/>
    <rule>
      <if/>
      <then/>
    </rule>
  </method>
  <method disclosed="true">
    <on selector="Reset"/>
    <rule>
      <if>
        <see-a class-name="Gene">
          <direction drow="1" dcol="-1"/>
        </see-a>
      </if>
      <then>
        <move>
          <direction dcol="-1"/>
        </move>
        <message selector="Reset">
          <direction/>
        </message>
      </then>
    </rule>
  </method>
  <method comments="Move @Inc Counts To The Right">
    <on selector="Inc"/>
    <rule>
      <if>
        <test expression1="@Inc" operator="&gt;" expression2="0"/>
      </if>
      <then>
        <move>
          <direction dcol="1"/>
        </move>
        <set attribute="@INC" value="@Inc - 1"/>
        <message selector="Inc">
          <direction/>
        </message>
      </then>
    </rule>
  </method>
  <method comments="Use @Direction To Set The Gene Above You And Advance To Right">
    <on selector="Write_Direction_And_Advance"/>
    <rule>
      <if>
        <test expression1="@Direction" expression2="0"/>
      </if>
      <then>
        <change shape="GENE_UP Gene">
          <direction drow="1"/>
        </change>
        <message selector="Advance">
          <direction/>
        </message>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="@Direction" expression2="1"/>
      </if>
      <then>
        <change shape="GENE_RIGHT Gene">
          <direction drow="1"/>
        </change>
        <message selector="Advance">
          <direction/>
        </message>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="@Direction" expression2="2"/>
      </if>
      <then>
        <change shape="GENE_DOWN Gene">
          <direction drow="1"/>
        </change>
        <message selector="Advance">
          <direction/>
        </message>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="@Direction" expression2="3"/>
      </if>
      <then>
        <change shape="GENE_LEFT Gene">
          <direction drow="1"/>
        </change>
        <message selector="Advance">
          <direction/>
        </message>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="@Direction" expression2="4"/>
      </if>
      <then>
        <change shape="GENE_STAY Gene">
          <direction drow="1"/>
        </change>
        <message selector="Advance">
          <direction/>
        </message>
      </then>
    </rule>
  </method>
  <method disclosed="true" comments="Advance To The Right As Long As There Is A Gene Above You">
    <on selector="Advance"/>
    <rule>
      <if>
        <see-a class-name="Gene">
          <direction drow="1" dcol="1"/>
        </see-a>
      </if>
      <then>
        <move>
          <direction dcol="1"/>
        </move>
      </then>
    </rule>
  </method>
  <method disclosed="true" comments="Set @Direction According To Gene Up">
    <on selector="Determine_Direction"/>
    <rule>
      <if>
        <see shape="GENE_UP Gene">
          <direction drow="1"/>
        </see>
      </if>
      <then>
        <set attribute="@DIRECTION" value="0"/>
      </then>
    </rule>
    <rule>
      <if>
        <see shape="GENE_RIGHT Gene">
          <direction drow="1"/>
        </see>
      </if>
      <then>
        <set attribute="@DIRECTION" value="1"/>
      </then>
    </rule>
    <rule>
      <if>
        <see shape="GENE_DOWN Gene">
          <direction drow="1"/>
        </see>
      </if>
      <then>
        <set attribute="@DIRECTION" value="2"/>
      </then>
    </rule>
    <rule>
      <if>
        <see shape="GENE_LEFT Gene">
          <direction drow="1"/>
        </see>
      </if>
      <then>
        <set attribute="@DIRECTION" value="3"/>
      </then>
    </rule>
    <rule>
      <if>
        <see shape="GENE_STAY Gene">
          <direction drow="1"/>
        </see>
      </if>
      <then>
        <set attribute="@DIRECTION" value="4"/>
      </then>
    </rule>
  </method>
</behavior>