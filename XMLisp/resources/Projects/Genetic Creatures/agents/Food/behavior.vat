  <method>
    <on selector="Eat"/>
    <rule>
      <if>
        <see negated="true" shape="FOOD_0 Food">
          <direction/>
        </see>
      </if>
      <then>
        <play-sound ref="Bit.Mp3"/>
        <message selector="Dec">
          <direction/>
        </message>
      </then>
    </rule>
  </method>
  <method comments="Reset @Inc If There Is No Food Down">
    <on selector="Food_Down"/>
    <rule>
      <if>
        <see shape="FOOD_0 Food">
          <direction/>
        </see>
        <empty>
          <direction drow="-1"/>
        </empty>
      </if>
      <then>
        <set attribute="@INC" value="0"/>
      </then>
    </rule>
    <rule>
      <if>
        <see-a class-name="Food">
          <direction drow="-1"/>
        </see-a>
      </if>
      <then>
        <message selector="Food_Down">
          <direction drow="-1"/>
        </message>
      </then>
    </rule>
  </method>
