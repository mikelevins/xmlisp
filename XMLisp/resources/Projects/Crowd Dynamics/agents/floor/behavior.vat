<behavior comments="I am user controlled">
  <method disclosed="true">
    <while-running/>
    <rule>
      <if/>
      <then>
        <set attribute="HEAT" value="(Heat[right] + Heat[left] + Heat[up] + Heat[down] ) * 0.25"/>
        <set attribute="SAFE" value="(Safe[right] + Safe[left] + Safe[up] + Safe[down] ) * 0.25 * 0.5"/>
