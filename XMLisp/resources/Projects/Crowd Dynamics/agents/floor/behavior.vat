      <if>
        <stacked adjacency="Immediately Below" shape="STANDING Person"/>
      </if>
      <then>
        <set attribute="@UNSAFE_PEOPLE" value="@Unsafe_People + 1"/>
      </then>
    </rule>
  </method>
</behavior>