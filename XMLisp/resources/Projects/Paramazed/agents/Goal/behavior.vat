      <then>
        <broadcast class-name="Person" selector="Aim_Up"/>
        <broadcast class-name="Person" selector="try_up"/>
      </then>
    </rule>
    <rule>
      <if>
        <key label="down arrow"/>
      </if>
      <then>
        <broadcast class-name="Person" selector="Aim_Down"/>
        <broadcast class-name="Person" selector="try_down"/>
      </then>
    </rule>
    <rule>
      <if>
        <key label="left arrow"/>
      </if>
      <then>
        <broadcast class-name="Person" selector="Aim_Left"/>
        <broadcast class-name="Person" selector="try_left"/>
      </then>
    </rule>
    <rule>
      <if>
        <key label="right arrow"/>
      </if>
      <then>
        <broadcast class-name="Person" selector="Aim_Right"/>
        <broadcast class-name="Person" selector="try_right"/>
      </then>
    </rule>
  </method>
  <method disclosed="true" comments="Put text here to explain what this method does!">
    <on selector="CHECK_WIN"/>
    <rule>
      <if>
        <test expression1="@left" expression2="0"/>
      </if>
      <then>
        <show-message text="Congratulations, everyone made it out!"/>
        <message selector="Next_Level">
          <direction/>
        </message>
      </then>
    </rule>
  </method>
  <method disclosed="true" comments="Put text here to explain what this method does!">
    <on selector="NEXT_LEVEL"/>
    <rule>
      <if>
        <test expression1="@level" expression2="0"/>
      </if>
      <then>
        <set attribute="@LEVEL" value="@level + 1"/>
        <switch-to-world world="level2"/>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="@level" expression2="1"/>
      </if>
      <then>
        <set attribute="@LEVEL" value="@level + 1"/>
        <switch-to-world world="level3"/>
      </then>
    </rule>
    <rule>
      <if/>
      <then>
        <stop-simulation/>
      </then>
    </rule>
  </method>
