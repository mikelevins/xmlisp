<?xml version="1.0"?>
<behavior comments="I am user controlled">
  <method disclosed="true">
    <while-running/>
    <rule>
      <if>
        <test expression1="@Color" expression2="1"/>
        <see shape="RED_TURN Turn_Marker">
          <direction/>
        </see>
      </if>
      <then>
        <rotate-by dpitch="180"/>
        <change shape="BLUE_TURN Turn_Marker">
          <direction/>
        </change>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="@Color" expression2="2"/>
        <see shape="BLUE_TURN Turn_Marker">
          <direction/>
        </see>
      </if>
      <then>
        <rotate-by dpitch="180"/>
        <change shape="RED_TURN Turn_Marker">
          <direction/>
        </change>
      </then>
    </rule>
  </method>
</behavior>