    </rule>
    <rule>
      <if>
        <see shape="matrix">
          <direction drow="-1"/>
        </see>
      </if>
      <then>
        <message selector="PUSH_DOWN">
          <direction drow="-1"/>
        </message>
      </then>
    </rule>
  </method>
  <method disclosed="true">
    <on selector="MOVE_RIGHT"/>
    <rule>
      <if/>
      <then>
        <move disclosed="true">
          <direction dcol="1"/>
        </move>
      </then>
    </rule>
  </method>
  <method>
    <on selector="MOVE_LEFT"/>
    <rule>
      <if/>
      <then>
        <move disclosed="true">
