  </method>
  <method disclosed="true" comments="push stuff down">
    <on selector="PUSH_DOWN"/>
    <rule>
      <if>
        <empty>
          <direction drow="-1"/>
        </empty>
      </if>
      <then>
        <move disclosed="true">
