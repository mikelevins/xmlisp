<?xml version="1.0"?>
<behavior comments="I am user controlled">
  <method disclosed="true" comments="navigate">
    <while-running/>
    <rule>
      <if>
        <key label="space"/>
      </if>
      <then>
        <play-sound ref="chink.mp3"/>
        <message selector="REMOVE-AHEAD">
          <direction/>
        </message>
      </then>
    </rule>
    <rule>
      <if>
        <key label="shift+space"/>
      </if>
      <then>
        <play-sound ref="boing.mp3"/>
        <message selector="REMOVE-ABOVE">
          <direction/>
        </message>
      </then>
    </rule>
    <rule>
      <if>
        <key label="option+space"/>
      </if>
      <then>
        <play-sound ref="boing.mp3"/>
        <message selector="REMOVE-BELOW">
          <direction/>
        </message>
      </then>
    </rule>
    <rule>
      <if>
        <key/>
      </if>
      <then>
        <message selector="ADD-AHEAD">
          <direction/>
        </message>
      </then>
    </rule>
    <rule>
      <if>
        <key label="shift+A"/>
      </if>
      <then>
        <message selector="ADD-ABOVE">
          <direction/>
        </message>
      </then>
    </rule>
    <rule>
      <if>
        <key label="option+A"/>
      </if>
      <then>
        <message selector="ADD-BELOW">
          <direction/>
        </message>
      </then>
    </rule>
    <rule>
      <if>
        <key label="shift+up arrow"/>
        <see-a disclosed="true" class-name="Hole" dlayer="1">
          <direction/>
        </see-a>
      </if>
      <then>
        <move disclosed="true" dlayer="1" animation="constant">
          <direction/>
        </move>
      </then>
    </rule>
    <rule>
      <if>
        <key label="shift+down arrow"/>
        <see-a disclosed="true" class-name="Hole" dlayer="-1">
          <direction/>
        </see-a>
      </if>
      <then>
        <move disclosed="true" dlayer="-1" animation="constant">
          <direction/>
        </move>
      </then>
    </rule>
    <rule>
      <if>
        <first-person-view/>
      </if>
      <then>
        <message selector="NAVIGATE-FIRST-PERSON">
          <direction/>
        </message>
      </then>
    </rule>
    <rule>
      <if/>
      <then>
        <message selector="NAVIGATE-WORLD">
          <direction/>
        </message>
      </then>
    </rule>
  </method>
  <method disclosed="true" comments="remove the piece of the matrix ahead">
    <on selector="REMOVE-AHEAD"/>
    <rule>
      <if>
        <test expression1="direction" expression2="0"/>
        <see shape="MATRIX Matrix">
          <direction drow="1"/>
        </see>
      </if>
      <then>
        <play-sound ref="Whip.mp3"/>
        <erase duration="slider()">
          <direction drow="1"/>
        </erase>
        <new shape="HOLE hole">
          <direction drow="1"/>
        </new>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="direction" expression2="1"/>
        <see shape="matrix">
          <direction dcol="-1"/>
        </see>
      </if>
      <then>
        <play-sound ref="Whip.mp3"/>
        <erase duration="slider()">
          <direction dcol="-1"/>
        </erase>
        <new shape="HOLE hole">
          <direction dcol="-1"/>
        </new>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="direction" expression2="2"/>
        <see shape="matrix">
          <direction drow="-1"/>
        </see>
      </if>
      <then>
        <play-sound ref="Whip.mp3"/>
        <erase duration="slider()">
          <direction drow="-1"/>
        </erase>
        <new shape="HOLE hole">
          <direction drow="-1"/>
        </new>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="direction" expression2="3"/>
        <see shape="matrix">
          <direction dcol="1"/>
        </see>
      </if>
      <then>
        <play-sound ref="Whip.mp3"/>
        <erase duration="slider()">
          <direction dcol="1"/>
        </erase>
        <new shape="HOLE hole">
          <direction dcol="1"/>
        </new>
      </then>
    </rule>
  </method>
  <method disclosed="true" comments="remove the piece of the matrix in layer above">
    <on selector="REMOVE-ABOVE"/>
    <rule>
      <if>
        <see disclosed="true" shape="matrix" dlayer="1">
          <direction/>
        </see>
      </if>
      <then>
        <play-sound ref="Whip.mp3"/>
        <erase disclosed="true" dlayer="1" duration="slider()">
          <direction/>
        </erase>
        <new disclosed="true" shape="HOLE hole" dlayer="1">
          <direction/>
        </new>
      </then>
    </rule>
  </method>
  <method disclosed="true" comments="remove the piece of the matrix in layer below">
    <on selector="REMOVE-BELOW"/>
    <rule>
      <if>
        <see disclosed="true" shape="matrix" dlayer="-1">
          <direction/>
        </see>
      </if>
      <then>
        <play-sound ref="Whip.mp3"/>
        <erase disclosed="true" dlayer="-1" duration="slider()">
          <direction/>
        </erase>
        <new disclosed="true" shape="HOLE hole" dlayer="-1">
          <direction/>
        </new>
      </then>
    </rule>
  </method>
  <method disclosed="true" comments="add a piece of the matrix ahead">
    <on selector="ADD-AHEAD"/>
    <rule>
      <if>
        <test expression1="direction" expression2="0"/>
        <see-a class-name="HOLE">
          <direction drow="1"/>
        </see-a>
      </if>
      <then>
        <play-sound ref="Whip.mp3"/>
        <erase duration="slider()">
          <direction drow="1"/>
        </erase>
        <new shape="MATRIX matrix">
          <direction drow="1"/>
        </new>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="direction" expression2="1"/>
        <see-a class-name="HOLE">
          <direction dcol="-1"/>
        </see-a>
      </if>
      <then>
        <play-sound ref="Whip.mp3"/>
        <erase duration="slider()">
          <direction dcol="-1"/>
        </erase>
        <new shape="MATRIX matrix">
          <direction dcol="-1"/>
        </new>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="direction" expression2="2"/>
        <see-a class-name="HOLE">
          <direction drow="-1"/>
        </see-a>
      </if>
      <then>
        <play-sound ref="Whip.mp3"/>
        <erase duration="slider()">
          <direction drow="-1"/>
        </erase>
        <new shape="MATRIX matrix">
          <direction drow="-1"/>
        </new>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="direction" expression2="3"/>
        <see-a class-name="HOLE">
          <direction dcol="1"/>
        </see-a>
      </if>
      <then>
        <play-sound ref="Whip.mp3"/>
        <erase duration="slider()">
          <direction dcol="1"/>
        </erase>
        <new shape="MATRIX matrix">
          <direction dcol="1"/>
        </new>
      </then>
    </rule>
  </method>
  <method disclosed="true" comments="add a piece of the matrix in layer above">
    <on selector="ADD-ABOVE"/>
    <rule>
      <if>
        <see-a disclosed="true" class-name="HOLE" dlayer="1">
          <direction/>
        </see-a>
      </if>
      <then>
        <play-sound ref="Whip.mp3"/>
        <erase disclosed="true" dlayer="1" duration="slider()">
          <direction/>
        </erase>
        <new disclosed="true" shape="MATRIX matrix" dlayer="1">
          <direction/>
        </new>
      </then>
    </rule>
  </method>
  <method disclosed="true" comments="add a piece of the matrix in layer below">
    <on selector="ADD-BELOW"/>
    <rule>
      <if>
        <see-a disclosed="true" class-name="HOLE" dlayer="-1">
          <direction/>
        </see-a>
      </if>
      <then>
        <play-sound ref="Whip.mp3"/>
        <erase disclosed="true" dlayer="-1" duration="slider()">
          <direction/>
        </erase>
        <new disclosed="true" shape="MATRIX matrix" dlayer="-1">
          <direction/>
        </new>
      </then>
    </rule>
  </method>
  <method disclosed="true" comments="rotate and push in direction">
    <on selector="NAVIGATE-WORLD"/>
    <rule>
      <if>
        <key label="right arrow"/>
      </if>
      <then>
        <set attribute="DIRECTION" value="3"/>
        <rotate-to roll-angle="direction * 90"/>
        <message selector="move_in_direction">
          <direction/>
        </message>
      </then>
    </rule>
    <rule>
      <if>
        <key label="left arrow"/>
      </if>
      <then>
        <set attribute="DIRECTION" value="1"/>
        <rotate-to roll-angle="direction * 90"/>
        <message selector="move_in_direction">
          <direction/>
        </message>
      </then>
    </rule>
    <rule>
      <if>
        <key label="up arrow"/>
      </if>
      <then>
        <set attribute="DIRECTION" value="0"/>
        <rotate-to roll-angle="direction * 90"/>
        <message selector="move_in_direction">
          <direction/>
        </message>
      </then>
    </rule>
    <rule>
      <if>
        <key label="down arrow"/>
      </if>
      <then>
        <set attribute="DIRECTION" value="2"/>
        <rotate-to roll-angle="direction * 90"/>
        <message selector="move_in_direction">
          <direction/>
        </message>
      </then>
    </rule>
  </method>
  <method disclosed="true" comments="cursor up = push forward, else turn">
    <on selector="NAVIGATE-FIRST-PERSON"/>
    <rule>
      <if>
        <key label="up arrow"/>
      </if>
      <then>
        <message selector="move_in_direction">
          <direction/>
        </message>
      </then>
    </rule>
    <rule>
      <if>
        <key label="right arrow"/>
      </if>
      <then>
        <set attribute="DIRECTION" value="(direction - 1) % 4"/>
        <rotate-to roll-angle="direction * 90"/>
      </then>
    </rule>
    <rule>
      <if>
        <key label="left arrow"/>
      </if>
      <then>
        <set attribute="DIRECTION" value="(direction + 1) % 4"/>
        <rotate-to roll-angle="direction * 90"/>
      </then>
    </rule>
    <rule>
      <if>
        <key label="down arrow"/>
      </if>
      <then>
        <set attribute="DIRECTION" value="(direction + 2) % 4"/>
        <rotate-to roll-angle="direction * 90"/>
      </then>
    </rule>
  </method>
  <method disclosed="true" comments="push in current direction">
    <on selector="move_in_direction"/>
    <rule>
      <if>
        <test expression1="direction" expression2="1"/>
        <see-a class-name="HOLE">
          <direction dcol="-1"/>
        </see-a>
      </if>
      <then>
        <move>
          <direction dcol="-1"/>
        </move>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="direction" expression2="2"/>
        <see-a class-name="HOLE">
          <direction drow="-1"/>
        </see-a>
      </if>
      <then>
        <move>
          <direction drow="-1"/>
        </move>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="direction" expression2="3"/>
        <see-a class-name="HOLE">
          <direction dcol="1"/>
        </see-a>
      </if>
      <then>
        <move>
          <direction dcol="1"/>
        </move>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="direction" expression2="0"/>
        <see-a class-name="HOLE">
          <direction drow="1"/>
        </see-a>
      </if>
      <then>
        <move>
          <direction drow="1"/>
        </move>
      </then>
    </rule>
  </method>
</behavior>