<?xml version="1.0"?>
<behavior comments="I am user controlled">
  <method disclosed="true" comments="use the I=invisible and V=visible keyboard input to toggle between seeing the matrix and seeing the pat&#10;h you created. Use F=flat to flatten out the path (to be able to see Nebuchadnezzar)">
    <while-running/>
    <rule>
      <if>
        <key label="I"/>
      </if>
      <then>
        <change shape="hole_box">
          <direction/>
        </change>
        <set-color-to/>
        <broadcast class-name="Counter" selector="COUNT-INVISIBLE"/>
      </then>
    </rule>
    <rule>
      <if>
        <key label="V"/>
      </if>
      <then>
        <change shape="hole">
          <direction/>
        </change>
        <set-color-to color="1.0 1.0 1.0 0.0"/>
        <broadcast class-name="Counter" selector="COUNT-VISIBLE"/>
      </then>
    </rule>
    <rule>
      <if>
        <key label="F"/>
      </if>
      <then>
        <change shape="hole">
          <direction/>
        </change>
        <set-color-to/>
      </then>
    </rule>
  </method>
  <method comments="make me invisible">
    <when-creating-new-agent/>
    <rule>
      <if/>
      <then>
        <set-color-to color="1.0 1.0 1.0 0.0"/>
      </then>
    </rule>
  </method>
</behavior>