<?xml version="1.0"?>
<behavior comments="Stops the sim after specified time">
  <method disclosed="true" comments="count and stop the sim after x seconds">
    <while-running/>
    <rule>
      <if>
        <once-every seconds="120"/>
      </if>
      <then>
        <stop-simulation/>
      </then>
    </rule>
  </method>
</behavior>